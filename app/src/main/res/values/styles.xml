<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>

    <style name="lahIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>


    <style name="common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t14dp</item>
    </style>
    <style name="common_text.white">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="lahGo" parent="lahIcon">
        <item name="android:src">@drawable/ic_skip_next_black_48dp</item>
    </style>

    <style name="lahGo.W">
        <item name="android:src">@drawable/ic_skip_next_white_48dp</item>
    </style>

    <style name="lahGoTop" parent="lahGo">
        <item name="android:rotation">270</item>
    </style>

    <style name="lahGoBottom" parent="lahGo">
        <item name="android:rotation">90</item>
    </style>

    <style name="lahGoTopW" parent="lahGo.W">
        <item name="android:rotation">270</item>
    </style>
    <style name="lahGoTopW.t40">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
    </style>

    <style name="lahGoBottomW" parent="lahGo.W">
        <item name="android:rotation">90</item>
    </style>
    <style name="lahGoBottomW.t40">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
    </style>

    <style name="commonIcon">
        <item name="android:layout_width">@dimen/t50dp</item>
        <item name="android:layout_height">@dimen/t50dp</item>
    </style>
    <style name="sortIcon" parent="commonIcon">
        <item name="android:padding">@dimen/t5dp</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>
    <style name="sortIcon.saveW">
        <item name="android:src">@drawable/ic_save_white_48dp</item>
    </style>
    <style name="sortIcon.reset">
        <item name="android:src">@drawable/ic_refresh_white_48</item>
    </style>

    <style name="divider_h2px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">#00c</item>
    </style>

    <!-- Sort menu -->
    <style name="sortTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="sortRadio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/t16dp</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>

    <style name="sortText" parent="sortRadio">
        <item name="android:padding">@dimen/t5dp</item>
    </style>

    <style name="sortRadio.2" parent="sortRadio">
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>