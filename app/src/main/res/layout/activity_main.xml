<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World2!"
        android:layout_centerInParent="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#4fff"
            android:padding="@dimen/t20dp">
            <ImageView
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"
                android:src="@drawable/icon_akashi_h01"/>
            <ImageView
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"
                android:src="@drawable/icon_attr_water"/>
            <ImageView
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"
                android:src="@drawable/icon_attr_fire"/>
            <ImageView
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"
                android:src="@drawable/icon_attr_wood"/>
            <ImageView
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"
                android:src="@drawable/icon_attr_light"/>
            <ImageView
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"
                android:src="@drawable/icon_attr_dark"/>

            <include
                layout="@layout/layout_hero_item"
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"/>
            <include
                layout="@layout/layout_sidekick_item"
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp"/>

            <RelativeLayout
                android:layout_width="@dimen/t70dp"
                android:layout_height="@dimen/t70dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ui_frame_h_base_fire"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_akashi_h01"
                    android:paddingTop="@dimen/t5dp"
                    android:paddingLeft="@dimen/t5dp"
                    android:paddingRight="@dimen/t5dp"
                    android:paddingBottom="@dimen/t5dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ui_frame_h_02"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/mainText"
                android:layout_width="@dimen/t300dp"
                android:layout_height="wrap_content"
                android:text="Hello World2!"/>
        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/heroLib"
        android:layout_marginTop="@dimen/t200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/heroFragmentArea"
        android:layout_marginTop="@dimen/t100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</RelativeLayout>