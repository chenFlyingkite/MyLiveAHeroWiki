<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey3a">

    <RelativeLayout
        android:id="@+id/tiImg"
        android:layout_width="@dimen/t70dp"
        android:layout_height="@dimen/t70dp"
        android:padding="@dimen/t5dp">

        <ImageView
            android:id="@+id/hero_item_attr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ui_frame_h_base_fire"/>
        <ImageView
            android:id="@+id/hero_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_akashi_h01"
            android:paddingTop="@dimen/t5dp"
            android:paddingLeft="@dimen/t5dp"
            android:paddingRight="@dimen/t5dp"
            android:paddingBottom="@dimen/t5dp"/>
        <ImageView
            android:id="@+id/hero_item_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ui_frame_h_02"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t14dp"
        tools:text="1234"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_below="@id/tiImg"
        android:layout_alignRight="@id/tiImg"/>

    <LinearLayout
        android:id="@+id/heroSkillArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/tiImg">

        <include
            android:id="@+id/heroSkill1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/view_item_hero_skill"/>

        <include
            android:id="@+id/heroSkill2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/view_item_hero_skill"/>

        <include
            android:id="@+id/heroSkill3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/view_item_hero_skill"/>
    </LinearLayout>

    <View
        android:layout_below="@id/heroSkillArea"
        android:background="@color/grey6"
        style="@style/divider"/>
</RelativeLayout>